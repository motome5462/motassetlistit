<!DOCTYPE html>
<html>
<head>
  <title>PO Detail</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/stylesheets/Report.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .nested-table th, .nested-table td {
      border: 1px solid #000 !important;
      vertical-align: middle;
      padding: 4px 6px;
    }
  </style>
</head>
<body>
  <header class="no-print">
    <% include index.ejs %>
  </header>

  <div class="table-wrapper container-fluid my-4">
    <!-- Logo and address -->
    <div class="d-flex align-items-start mb-4">
      <img src="https://www.mot.co.th/wp-content/uploads/2024/04/%E0%B9%82%E0%B8%A5%E0%B9%82%E0%B8%81%E0%B9%89-MOTNew-%E0%B9%81%E0%B8%9A%E0%B8%9A%E0%B8%8A%E0%B8%B1%E0%B8%94.png"
           style="width: 180px; height: 120px; margin-right: 15px;" />
      <div style="margin-top: 1.5%; margin-left: 30px; font-size: 18px;">
        <p class="mb-0">
          835/6&nbsp;&nbsp;&nbsp;ถ.&nbsp;สรงประภา&nbsp;&nbsp;&nbsp;แขวงดอนเมือง&nbsp;&nbsp;&nbsp;
          เขตดอนเมือง&nbsp;&nbsp;&nbsp;กรุงเทพฯ&nbsp;&nbsp;&nbsp;10210&nbsp;&nbsp;&nbsp;
          โทร +66 (0)2 928-6806&nbsp;&nbsp;&nbsp;แฟกซ์ +66 (0)2 928-6807
        </p>
        <p class="mb-0">
          835/6,&nbsp;Song Prapha Road,&nbsp;Don Mueang Sub-district,&nbsp;Don Mueang District,&nbsp;
          Bangkok&nbsp;Thailand&nbsp;Tel: +66 (0)2 928-6806&nbsp;Fax: +66 (0)2 928-6807
        </p>
        <p class="mb-0">www.mot.co.th</p>
      </div>
    </div>

    <!-- Main PO Info -->
    <table class="table table-bordered" style="border: 1px solid black;">
      <thead>
        <tr>
          <th colspan="6" class="text-center">
            <strong>ใบสั่งซื้อ / Purchase Order (PO)</strong>
            <button class="btn btn-success no-print float-end" onclick="window.print()">Print</button>
          </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>PO No.</th>
          <td><%= po.POno || po._id %></td>
          <th>Manual PO No.</th>
          <td><%= po.manual_POno || '-' %></td>
          <th>Date</th>
          <td><%= po.date ? new Date(po.date).toISOString().substr(0,10) : '-' %></td>
        </tr>
        <tr>
          <th>Attention</th>
          <td><%= po.attention || '-' %></td>
          <th>Email</th>
          <td><%= po.email || '-' %></td>
          <th>Mobile</th>
          <td><%= po.mobile || '-' %></td>
        </tr>
        <tr>
          <th>Tel</th>
          <td><%= po.Tel || '-' %></td>
          <th>Fax</th>
          <td><%= po.fax || '-' %></td>
          <th>Taxpayer No.</th>
          <td><%= po.Taxpayernol || '-' %></td>
        </tr>
        <tr>
          <th>Tax ID</th>
          <td><%= po.Texid || '-' %></td>
          <th>Payment Term</th>
          <td><%= po.Paymentterm || '-' %></td>
          <th>Delivery Date</th>
          <td><%= po.deliverydate ? new Date(po.deliverydate).toISOString().substr(0,10) : '-' %></td>
        </tr>
        <tr>
          <th>Quotation</th>
          <td><%= po.quotation || '-' %></td>
          <th>Purchasing</th>
          <td><%= po.purchasing || '-' %></td>
          <th>Approval</th>
          <td><%= po.approval || '-' %></td>
        </tr>
      </tbody>
    </table>

    <!-- Linked PRs and their PRITEMs -->
    <% if (po.pr && po.pr.length > 0) { %>
      <h3>Linked Purchase Requests (PRs)</h3>
      <% po.pr.forEach((pr, prIndex) => { %>
        <div class="mb-4">
          <h5>PR #<%= pr.PRno || pr._id %> - <%= pr.name || '' %></h5>
          <p><strong>Project Note:</strong> <%= pr.note || '-' %></p>
          <p><strong>Customer:</strong> <%= pr.customer || '-' %></p>
          <p><strong>Date:</strong> <%= pr.date ? new Date(pr.date).toISOString().substr(0,10) : '-' %></p>

          <% if (pr.pritem && pr.pritem.length > 0) { %>
            <table class="table nested-table" style="border-collapse: collapse; width: 100%;">
              <thead style="background-color: #0099ff; color: white;">
                <tr>
                  <th style="width: 40px;">#</th>
                  <th>Quantity</th>
                  <th>Unit</th>
                  <th>P/N (SN)</th>
                  <th>Description</th>
                  <th>In Stock</th>
                  <th>Out Stock</th>
                  <th style="text-align:right;">Amount Price</th>
                  <th style="text-align:right;">Unit Price</th>
                  <th>Remarks</th>
                </tr>
              </thead>
              <tbody>
                <% pr.pritem.forEach((item, idx) => { %>
                  <tr>
                    <td class="text-center"><%= idx + 1 %></td>
                    <td class="text-center"><%= item.quantity || '-' %></td>
                    <td class="text-center"><%= item.unit || '-' %></td>
                    <td class="text-center"><%= item.sn || '-' %></td>
                    <td><%= item.description || '-' %></td>
                    <td class="text-center"><%= item.instock || '' %></td>
                    <td class="text-center"><%= item.outstock || '' %></td>
                    <td class="text-end"><%= parseFloat(item.price || 0).toLocaleString('en-US', { minimumFractionDigits: 2 }) %></td>
                    <td class="text-end"><%= parseFloat(item.ppu || 0).toLocaleString('en-US', { minimumFractionDigits: 2 }) %></td>
                    <td><%= item.remark || '' %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          <% } else { %>
            <p>No PR Items added.</p>
          <% } %>
        </div>
      <% }) %>
    <% } else { %>
      <p>No linked Purchase Requests.</p>
    <% } %>
    
    <a href="/po/list" class="btn btn-secondary mt-3 no-print">Back to PO List</a>
  </div>
</body>
</html>
