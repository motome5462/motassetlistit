<!DOCTYPE html>
<html>
<head>
  <title><%= po._id ? 'Edit PO' : 'Create PO' %></title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/stylesheets/Report.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <header class="no-print mb-4">
    <% include index.ejs %>
  </header>

  <div class="container my-4">
    <div class="card shadow-sm">
      <div class="card-header text-white" style="background-color: #0099ff;">
        <h2 class="mb-0"><%= po._id ? 'Edit PO #' + (po.POno || po._id) : 'Create New PO' %></h2>
      </div>

      <div class="card-body">
        <form action="<%= po._id ? '/po/' + po._id + '/edit' : '/po/new' %>" method="POST">
          <div class="row">
            <div class="col-md-4 mb-3">
              <label for="manual_POno" class="form-label">Manual PO No.</label>
              <input type="number" class="form-control" id="manual_POno" name="manual_POno" value="<%= po.manual_POno || '' %>">
            </div>
            <div class="col-md-4 mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= po.name || '' %>">
            </div>
            <div class="col-md-4 mb-3">
              <label for="dept" class="form-label">Department</label>
              <input type="text" class="form-control" id="dept" name="dept" value="<%= po.dept || '' %>">
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="supplier" class="form-label">Supplier</label>
              <input type="text" class="form-control" id="supplier" name="supplier" value="<%= po.supplier || '' %>">
            </div>
            <div class="col-md-6 mb-3">
              <label for="supplierdetail" class="form-label">Supplier Detail</label>
              <input type="text" class="form-control" id="supplierdetail" name="supplierdetail" value="<%= po.supplierdetail || '' %>">
            </div>
          </div>

          <div class="row">
            <div class="col-md-4 mb-3">
              <label for="date" class="form-label">Date</label>
              <input type="date" class="form-control" id="date" name="date" value="<%= po.date ? new Date(po.date).toISOString().substring(0, 10) : '' %>">
            </div>
            <div class="col-md-4 mb-3">
              <label for="term" class="form-label">Term</label>
              <input type="text" class="form-control" id="term" name="term" value="<%= po.term || '' %>">
            </div>
            <div class="col-md-4 mb-3">
              <label for="Paymentterm" class="form-label">Payment Term</label>
              <input type="text" class="form-control" id="Paymentterm" name="Paymentterm" value="<%= po.Paymentterm || '' %>">
            </div>
          </div>

          <div class="row">
            <div class="col-md-4 mb-3">
              <label for="discount" class="form-label">Discount</label>
              <input type="text" class="form-control" id="discount" name="discount" value="<%= po.discount || '' %>">
            </div>
            <div class="col-md-4 mb-3">
              <label for="Taxpayerno" class="form-label">Taxpayer No.</label>
              <input type="text" class="form-control" id="Taxpayerno" name="Taxpayerno" value="<%= po.Taxpayerno || '' %>">
            </div>
            <div class="col-md-4 mb-3">
              <label for="Texid" class="form-label">Tex ID</label>
              <input type="text" class="form-control" id="Texid" name="Texid" value="<%= po.Texid || '' %>">
            </div>
          </div>

          <div class="row">
            <div class="col-md-4 mb-3">
              <label for="Tel" class="form-label">Tel</label>
              <input type="text" class="form-control" id="Tel" name="Tel" value="<%= po.Tel || '' %>">
            </div>
            <div class="col-md-4 mb-3">
              <label for="fax" class="form-label">Fax</label>
              <input type="text" class="form-control" id="fax" name="fax" value="<%= po.fax || '' %>">
            </div>
            <div class="col-md-4 mb-3">
              <label for="mobile" class="form-label">Mobile</label>
              <input type="text" class="form-control" id="mobile" name="mobile" value="<%= po.mobile || '' %>">
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="attention" class="form-label">Attention</label>
              <input type="text" class="form-control" id="attention" name="attention" value="<%= po.attention || '' %>">
            </div>
            <div class="col-md-6 mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" value="<%= po.email || '' %>">
            </div>
          </div>

          <div class="row">
            <div class="col-md-4 mb-3">
              <label for="deliverydate" class="form-label">Delivery Date</label>
              <input type="date" class="form-control" id="deliverydate" name="deliverydate" value="<%= po.deliverydate ? new Date(po.deliverydate).toISOString().substring(0,10) : '' %>">
            </div>
            <div class="col-md-4 mb-3">
              <label for="quotation" class="form-label">Quotation</label>
              <input type="text" class="form-control" id="quotation" name="quotation" value="<%= po.quotation || '' %>">
            </div>
            <div class="col-md-4 mb-3">
              <label for="purchasing" class="form-label">Purchasing</label>
              <input type="text" class="form-control" id="purchasing" name="purchasing" value="<%= po.purchasing || '' %>">
            </div>
          </div>

          <div class="mb-3">
            <label for="approval" class="form-label">Approval</label>
            <input type="text" class="form-control" id="approval" name="approval" value="<%= po.approval || '' %>">
          </div>

          <div class="text-end">
            <button type="submit" class="btn btn-success px-4">
              <%= po._id ? 'Update PO' : 'Create PO' %>
            </button>
          </div>
        </form>

        <% if (errors) { %>
          <div class="alert alert-danger mt-4">
            <h5>Form Errors:</h5>
            <ul class="mb-0">
              <% for (let field in errors) { %>
                <li><strong><%= field %>:</strong> <%= errors[field].message || errors[field] %></li>
              <% } %>
            </ul>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</body>
</html>
