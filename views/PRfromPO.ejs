<!DOCTYPE html>
<html>
<head>
  <title>Create PR from PO</title>
  <link rel="stylesheet" href="/stylesheets/Report.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <header class="no-print">
    <% include index.ejs %>
  </header>

  <div class="container mt-4">
    <h2>Create PR from PO</h2>

    <% if (errors) { %>
      <div class="alert alert-danger">
        <pre><%= JSON.stringify(errors, null, 2) %></pre>
      </div>
    <% } %>

    <form action="/pr/frompo" method="POST">
      <input type="hidden" name="poId" value="<%= po._id %>" />

      <!-- === PR FIELDS SECTION === -->
      <div class="row">
        <div class="col-md-4 mb-3">
          <label class="form-label">Customer</label>
          <input type="text" name="customer" class="form-control" value="<%= pr ? pr.customer : '' %>">
        </div>
        <div class="col-md-4 mb-3">
          <label class="form-label">Date</label>
          <input type="date" name="date" class="form-control"
            value="<%= pr && pr.date ? new Date(pr.date).toISOString().substring(0,10) : (po.date ? new Date(po.date).toISOString().substring(0,10) : '') %>">
        </div>
      </div>

      <div class="row">
        <div class="col-md-4 mb-3">
          <label class="form-label">Note</label>
          <input type="text" name="note" class="form-control" value="<%= pr ? pr.note : '' %>">
        </div>
        <div class="col-md-4 mb-3">
          <label class="form-label">Delivery</label>
          <input type="text" name="delivery" class="form-control" value="<%= pr ? pr.delivery : '' %>">
        </div>
        <div class="col-md-4 mb-3">
          <label class="form-label">Validity</label>
          <input type="text" name="validity" class="form-control" value="<%= pr ? pr.validity : '-' %>">
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <label class="form-label">Transport</label>
          <input type="text" name="transport" class="form-control" value="<%= pr ? pr.transport : '-' %>">
        </div>
        <div class="col-md-6 mb-3">
          <label class="form-label">Ref</label>
          <input type="text" name="ref" class="form-control" value="<%= pr ? pr.ref : '' %>">
        </div>
      </div>

      <!-- === ITEM SECTION === -->
      <h4 class="mt-4">Items</h4>
      <% po.item.forEach((item, index) => { %>
        <div class="border rounded p-3 mb-3">
          <input type="hidden" name="itemId[]" value="<%= item._id %>">

          <p><strong>Description:</strong> <%= item.description %></p>
          <p><strong>Quantity:</strong> <%= item.quantity %> <%= item.unit %></p>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label class="form-label">Stock Location</label><br/>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="radio"
                  name="stockLocation[<%= index %>]"
                  id="instock_<%= index %>"
                  value="instock"
                  <%= item.instock === '/' ? 'checked' : '' %>
                >
                <label class="form-check-label" for="instock_<%= index %>">In Stock</label>
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="radio"
                  name="stockLocation[<%= index %>]"
                  id="outstock_<%= index %>"
                  value="outstock"
                  <%= item.outstock === '/' ? 'checked' : '' %>
                >
                <label class="form-check-label" for="outstock_<%= index %>">Out Stock</label>
              </div>
            </div>

            <div class="col-md-6 mb-3">
              <label class="form-label">Remark</label>
              <textarea class="form-control" name="remark[]" rows="2"><%= item.remark || '' %></textarea>
            </div>
          </div>
        </div>
      <% }) %>

      <button type="submit" class="btn btn-primary">Create PR</button>
    </form>
  </div>
</body>
</html>
