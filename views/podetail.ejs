<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>PO Detail</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/stylesheets/Report.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <header class="no-print">
    <% include index.ejs %>
  </header>  

  <div class="container mt-4">
    <h1>PO Detail: <%= po.POno || po._id %></h1>
    <hr />

    <% if (po.pr) { %>
      <div class="mb-3">
        <strong>Supplier:</strong> <%= po.pr.supplier %><br />
        <strong>Tax ID:</strong> <%= po.Taxpayerno %><br />
        <strong>Phone:</strong> <%= po.Tel %><br />
        <strong>Mobile:</strong> <%= po.mobile %><br />
        <strong>Email:</strong> <%= po.email %><br />
        <strong>PO Date:</strong> <%= po.date ? po.date.toISOString().substr(0, 10) : '' %><br />
        <strong>Delivery Date:</strong> <%= po.deliverydate ? po.deliverydate.toISOString().substr(0, 10) : '' %>
      </div>

      <h4 class="mt-4">Items</h4>
      <div class="card mb-3">
        <div class="card-header">
          <strong>PR No:</strong> <%= po.pr.PRno || po.pr._id %> — <%= po.pr.name %> | <%= po.pr.customer %>
        </div>
        <div class="card-body p-0">
          <table class="table table-bordered m-0">
            <thead class="table-light">
              <tr>
                <th>#</th>
                <th>Description</th>
                <th>SN</th>
                <th>Qty</th>
                <th>Unit</th>
                <th>PPU</th>
                <th>Price</th>
                <th>Remark</th>
              </tr>
            </thead>
            <tbody>
              <% po.pr.pritem.forEach((item, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= item.description %></td>
                  <td><%= item.sn %></td>
                  <td><%= item.quantity %></td>
                  <td><%= item.unit %></td>
                  <td><%= item.ppu %></td>
                  <td><%= item.price %></td>
                  <td><%= item.remark %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    <% } else { %>
      <p>No linked PR found for this PO.</p>
    <% } %>

    <div class="mt-4">
      <h5>Summary</h5>
      <p><strong>Total:</strong> ฿<%= totalPrice %></p>
      <p><strong>VAT (7%):</strong> ฿<%= vat %></p>
      <p><strong>Net:</strong> ฿<%= net %></p>
    </div>

    <a href="/po/list" class="btn btn-secondary mt-3">Back to List</a>
  </div>
</body>
</html>
